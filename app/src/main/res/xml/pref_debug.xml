<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_key_debug_switch"
        android:summary="@string/pref_description_debug_switch"
        android:title="@string/pref_title_debug_switch"/>
    <EditTextPreference
        android:defaultValue="@string/pref_default_debug_generated_network_number"
        android:inputType="numberDecimal"
        android:key="@string/pref_key_debug_generated_network_number"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_debug_generated_network_number"/>

</PreferenceScreen>
